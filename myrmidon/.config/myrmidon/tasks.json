[
  {
    "name": "Power off",
    "confirm": true,
    "command": "systemctl poweroff"
  },
  {
    "name": "Reboot",
    "confirm": true,
    "command": "systemctl reboot"
  },
  {
    "name": "Suspend",
    "confirm": true,
    "command": "systemctl suspend"
  },
  {
    "name": "Lock",
    "bommand1": "i3lock -c 002b36 -e -n",
    "bommand2": "i3lock -e -n -i ~/Pictures/wallpaper/_MG_0158.jpg",
    "command": "cd ~/.local/bin; lock.sh &"
  },
  {
    "name": "VPN Up",
    "oldcommand": "source ~/.zshrc.secrets && nmcli con up $QUICK_VPN",
    "command": "source ~/.zshrc.secrets && nordvpn c $QUICK_VPN"
  },
  {
    "name": "VPN Down",
    "oldcommand": "source ~/.zshrc.secrets && nmcli con down $QUICK_VPN",
    "command": "source ~/.zshrc.secrets && nordvpn d"
  },
  {
    "name": "Screeps Server",
    "command": "cd ~/.config/i3/layout; screeps_server"
  }, 
  {
    "name": "Gnome Settings",
    "command": "export XDG_CURRENT_DESKTOP=GNOME; gnome-control-center &"
  },
  {
    "name": "Layout Manager",
    "command": "/bin/bash layout_manager.sh"
  },
  {
    "name": "Toggle Redshift",
    "command": "pkill -USR1 redshift"
  }
]
