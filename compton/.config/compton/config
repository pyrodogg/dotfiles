shadow-exclude-list = [
    "name = 'Notification'",
    "class_g = 'Conky'",
    "class_g ?= 'Notify-osd'",
    "class_g = 'Cairo-clock'",
    "_NET_WM_STATE@:32a *= '_NET_WM_STATE_HIDDEN'"
