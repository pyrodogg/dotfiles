
#opacity
fading = true; # Fade windows during opacity changes.
inactive-opacity = 0.8;
active-opacity = 0.9;
opacity-rule = [
    "99:class_g = 'Firefox'",
    "99:class_g = 'eom'",
    "99:class_g = 'Google-chrome' && (fullscreen || focused)",
    "85:class_g = 'Rofi'",
    "0:_NET_WM_STATE@[0]:32a *= '_NET_WM_STATE_HIDDEN'",
    "99:class_g = 'feh'"
];

#shadow
shadow = true;
no-dnd-shadow = true;
